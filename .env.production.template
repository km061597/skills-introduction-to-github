# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control!

# ==================
# Database Configuration
# ==================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<CHANGEME_STRONG_PASSWORD>  # Generate with: openssl rand -base64 32
POSTGRES_DB=smartamazon
POSTGRES_PORT=5432

# ==================
# Redis Configuration
# ==================
REDIS_PASSWORD=<CHANGEME_STRONG_PASSWORD>  # Generate with: openssl rand -base64 32
REDIS_PORT=6379

# ==================
# Application Configuration
# ==================
ENVIRONMENT=production
APP_VERSION=1.0.0
LOG_LEVEL=INFO
SECRET_KEY=<CHANGEME_STRONG_SECRET>  # Generate with: openssl rand -hex 32
BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
VCS_REF=$(git rev-parse --short HEAD)

# ==================
# JWT Authentication
# ==================
JWT_SECRET_KEY=<CHANGEME_STRONG_SECRET>  # Generate with: openssl rand -hex 32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================
# Rate Limiting
# ==================
RATE_LIMIT_PER_MINUTE=60

# ==================
# CORS Configuration
# ==================
CORS_ORIGINS=https://smartamazon.com,https://www.smartamazon.com

# ==================
# Frontend Configuration
# ==================
NEXT_PUBLIC_API_URL=https://api.smartamazon.com
NEXT_PUBLIC_URL=https://smartamazon.com
NEXT_PUBLIC_GTAG_ID=G-XXXXXXXXXX  # Google Analytics ID (optional)

# ==================
# Email Configuration (Optional)
# ==================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=<CHANGEME_APP_PASSWORD>
SMTP_FROM=noreply@smartamazon.com

# ==================
# Monitoring & Error Tracking (Optional)
# ==================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx  # Sentry error tracking
PROMETHEUS_ENABLED=true

# ==================
# Docker Configuration
# ==================
API_PORT=8000
FRONTEND_PORT=3000

# ==================
# SSL/TLS Configuration
# ==================
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ==================
# Backup Configuration
# ==================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=smartamazon-backups  # If using S3 for backups
AWS_ACCESS_KEY_ID=<CHANGEME_IF_USING_S3>
AWS_SECRET_ACCESS_KEY=<CHANGEME_IF_USING_S3>
AWS_REGION=us-east-1

# ==================
# Performance Tuning
# ==================
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=120
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAXMEMORY=512mb
