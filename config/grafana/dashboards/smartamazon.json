{
  "dashboard": {
    "title": "SmartAmazon Platform Overview",
    "tags": ["smartamazon", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"smartamazon-api\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "reqps"
          }
        ]
      },
      {
        "id": 2,
        "title": "API Response Time (95th percentile)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"smartamazon-api\"}[5m]))",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Latency",
            "format": "s"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"smartamazon-api\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"smartamazon-api\",status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Errors/sec",
            "format": "reqps"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "High Error Rate Alert",
          "message": "Error rate exceeded 5%"
        }
      },
      {
        "id": 4,
        "title": "Active Requests",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "http_requests_in_progress{job=\"smartamazon-api\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "auto",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 5,
        "title": "Total Requests (24h)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=\"smartamazon-api\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"smartamazon\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Connections",
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Query Duration (95th percentile)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pg_stat_statements_mean_exec_time_seconds[5m]))",
            "legendFormat": "Query Time",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Duration",
            "format": "s"
          }
        ]
      },
      {
        "id": 8,
        "title": "Redis Cache Hit Rate",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 0.7,
                  "color": "yellow"
                },
                {
                  "value": 0.9,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Redis Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 24 },
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Used",
            "refId": "A"
          },
          {
            "expr": "redis_memory_max_bytes",
            "legendFormat": "Max",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "label": "Memory",
            "format": "bytes"
          }
        ]
      },
      {
        "id": 10,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "CPU %",
            "format": "percent",
            "max": 100
          }
        ]
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 24 },
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Memory %",
            "format": "percent",
            "max": 100
          }
        ]
      },
      {
        "id": 12,
        "title": "Pod Count",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"smartamazon\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 13,
        "title": "HPA Replicas",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 6, "y": 32 },
        "targets": [
          {
            "expr": "kube_hpa_status_current_replicas{hpa=\"smartamazon-backend-hpa\"}",
            "legendFormat": "Current Replicas",
            "refId": "A"
          },
          {
            "expr": "kube_hpa_status_desired_replicas{hpa=\"smartamazon-backend-hpa\"}",
            "legendFormat": "Desired Replicas",
            "refId": "B"
          },
          {
            "expr": "kube_hpa_spec_max_replicas{hpa=\"smartamazon-backend-hpa\"}",
            "legendFormat": "Max Replicas",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Replicas",
            "format": "short"
          }
        ]
      },
      {
        "id": 14,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 32 },
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\"})",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 15,
        "title": "Top Endpoints by Request Count",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 40 },
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (increase(http_requests_total{job=\"smartamazon-api\"}[1h])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        }
      },
      {
        "id": 16,
        "title": "Recent Logs",
        "type": "logs",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 40 },
        "targets": [
          {
            "expr": "{service=\"smartamazon-api\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(kube_pod_info, namespace)",
          "current": {
            "text": "smartamazon",
            "value": "smartamazon"
          },
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "refresh": 1
        },
        {
          "name": "pod",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
          "current": {
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\",namespace=\"smartamazon\"}",
          "iconColor": "red",
          "name": "Alerts",
          "titleFormat": "Alert: {{alertname}}"
        }
      ]
    }
  }
}
